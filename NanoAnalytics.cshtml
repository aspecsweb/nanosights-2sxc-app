@inherits AppCode.Razor.AppRazor
@using AppCode
@using AppCode.Data

@{
  var projectKey = MyModel.Get<string>("projectKey");
}

@* Show App Settings to Admins *@
@if (MyUser.IsContentAdmin)
{
  <div class="alert alert-dark">
    NanoAnalytics
  </div>
} else { // Track normal users
  <nano-analytics
    projectKey="@projectKey"
  />
}

<script type="module">
  import nanoAnalytics from 'https://cdn.jsdelivr.net/npm/nano-analytics@1.1.0/+esm'
</script>